FROM bellsoft/liberica-native-image-kit-container:jdk-21-nik-23.1.6-stream-musl as builder

RUN apk add libstdc++
WORKDIR /app
ADD chat-api /app/chat-api
ADD pom.xml ./
RUN cd chat-api && ./mvnw -Dmaven.test.skip=true -Pnative native:compile


FROM bellsoft/alpaquita-linux-base:stream-musl

RUN apk add curl
WORKDIR /app
EXPOSE 8080
ENTRYPOINT ["/app/chat"]
COPY --from=builder /app/chat-api/target/native/chat /app/chat